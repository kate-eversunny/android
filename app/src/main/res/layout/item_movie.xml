<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/moviesListItemRoot"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/ivItemPoster"
		android:layout_width="match_parent"
		android:layout_height="@dimen/item_movie_height"
		android:contentDescription="@string/poster_name_wrath_of_man"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:srcCompat="@mipmap/poster" />

	<TextView
		android:id="@+id/tvItemMovieName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/item_movie_components_margin"
		android:layout_marginTop="@dimen/margin_10"
		android:elevation="@dimen/elevation_default"
		android:textColor="@color/black"
		android:textSize="@dimen/text_size_14"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="@id/ivItemPoster"
		app:layout_constraintTop_toBottomOf="@id/ivItemPoster"
		tools:text="@string/movie_name_wrath_of_man" />

	<TextView
		android:id="@+id/tvItemMovieAnnotation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/item_movie_components_margin"
		android:layout_marginTop="@dimen/margin_10"
		android:layout_marginBottom="@dimen/margin_15"
		android:elevation="@dimen/elevation_default"
		android:textColor="@color/black"
		android:textSize="@dimen/text_size_12"
		android:textStyle="normal"
		app:layout_constraintBottom_toTopOf="@id/rbItemRating"
		app:layout_constraintStart_toStartOf="@id/tvItemMovieName"
		app:layout_constraintTop_toBottomOf="@id/tvItemMovieName"
		tools:text="Эйч — загадочный и холодный на вид джентльмен, но внутри него пылает жажда справедливости. Преследуя..." />

	<RatingBar
		android:id="@+id/rbItemRating"
		style="@style/customRatingBarSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/item_movie_components_margin"
		android:layout_marginBottom="@dimen/item_movie_components_margin"
		android:elevation="@dimen/elevation_default"
		android:isIndicator="true"
		android:numStars="5"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		tools:rating="3" />

	<TextView
		android:id="@+id/tvItemAgeText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="@dimen/item_movie_age_margin"
		android:layout_marginBottom="@dimen/item_movie_age_margin"
		android:background="@drawable/circle_border_small"
		android:elevation="@dimen/elevation_default"
		android:gravity="center"
		android:textColor="@color/black"
		android:textSize="@dimen/text_size_7"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		tools:text="@string/age_restriction_18" />

</androidx.constraintlayout.widget.ConstraintLayout>