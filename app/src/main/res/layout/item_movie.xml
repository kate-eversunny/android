<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/moviesListItemRoot"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<com.google.android.material.imageview.ShapeableImageView
		android:id="@+id/ivItemPoster"
		android:layout_width="match_parent"
		android:layout_height="240dp"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:srcCompat="@mipmap/poster_wrath"
		android:contentDescription="@string/poster_name_wrath_of_man" />

	<TextView
		android:id="@+id/tvItemMovieName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="@id/ivItemPoster"
		app:layout_constraintTop_toBottomOf="@id/ivItemPoster"
		android:layout_marginStart="3dp"
		android:layout_marginTop="10dp"
		android:elevation="@dimen/elevation_default"
		tools:text="@string/movie_name_wrath_of_man"
		android:textColor="@color/black"
		android:textSize="14sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/tvItemMovieAnnotation"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="@id/tvItemMovieName"
		app:layout_constraintTop_toBottomOf="@id/tvItemMovieName"
		app:layout_constraintBottom_toTopOf="@id/rbItemRating"
		android:layout_marginStart="3dp"
		android:layout_marginTop="8dp"
		android:layout_marginBottom="15dp"
		android:elevation="@dimen/elevation_default"
		tools:text="Эйч — загадочный и холодный на вид джентльмен, но внутри него пылает жажда справедливости. Преследуя..."
		android:textColor="@color/black"
		android:textSize="12sp"
		android:textStyle="normal" />

	<RatingBar
		android:id="@+id/rbItemRating"
		style="@style/customRatingBarSmall"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom = "5dp"
		android:layout_marginStart="3dp"
		android:elevation="@dimen/elevation_default"
		android:isIndicator="true"
		android:numStars="5"
		tools:rating="3" />

	<TextView
		android:id="@+id/tvItemAgeText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginBottom="2dp"
		android:layout_marginEnd="2dp"
		android:elevation="@dimen/elevation_default"
		tools:text="@string/age_restriction_18"
		android:textColor="@color/black"
		android:textSize="7sp"
		android:background="@drawable/circle_border_small"
		android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>